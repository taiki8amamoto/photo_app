<h1>新しく投稿する</h1><br>
<%= form_with( model: @picture, local: true, url: confirm_pictures_path ) do |form| %>
  <% if @picture.errors.any? %>
    <div id="error_expanation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :画像 %>
    <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>
  <div class="picture_content">
    <%= form.label :内容 %>
    <%= form.text_field :content %>
  </div>
  <br>
<%= form.submit "確認画面へ" %>
<% end %>
<button type="button" class="btn btn-light">
<%= link_to "一覧画面に戻る", pictures_path %>
</button>