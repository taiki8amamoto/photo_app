<h1>ユーザー一覧</h1><br>
<table>
  <tr>
    <th>名前</th>
    <th>プロフィール画像</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td>
        <% if user.image && user.image.url %>
          <%= image_tag user.image.url, class: 'sized' %>
        <% else %>
          未登録
        <% end %>
      </td>
      <td>
        <button type="button" class="btn btn-light">
        <% if current_user.id == user.id %>
        <%= link_to "自分のプロフィールを編集する", edit_user_path(current_user.id) %>
        <% else %>
        <%= link_to "詳細なプロフィールを確認する", user_path(user.id) %>
        <% end %>
        </button>
      </td>
    </tr>
  <% end %>
</table>
