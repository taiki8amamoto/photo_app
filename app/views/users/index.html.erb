<h1>ユーザー一覧</h1><br>
<table>
  <tr>
    <th>名前</th>
    <th>プロフィール画像</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= image_tag(user.image.url) if user.image && user.image.url %></td>
      <td>
      <button type="button" class="btn btn-light">
      <% if current_user.id == user.id %>
      <%= link_to "自分のプロフィールを確認する", user_path(user.id) %>
      <% else %>
      <%= link_to "詳細なプロフィールを確認する", user_path(user.id) %>
      <% end %>
      </button></td>
    </tr>
  <% end %>
</table>
<br>
<button type="button" class="btn btn-light"><%= link_to '自分のプロフィールを編集する', edit_user_path(current_user.id) %></button>
<br>
<button type="button" class="btn btn-light"><%= link_to '新しく投稿する', new_picture_path %></button>