<h1><%= @user.name %>のプロフィール編集</h1>
<%= form_with( model: @picture, local: true ) do |form| %>
  <% if @picture.errors.any? %>
    <div id="error_expanation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :画像 %>
    <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>
  <div class="picture_content">
    <%= form.label :内容 %>
    <%= form.text_field :content %>
  </div>
  <br>
<%= form.submit "変更を確定する" %>
<% end %>